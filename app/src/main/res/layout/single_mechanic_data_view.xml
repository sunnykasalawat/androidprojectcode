<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="160dp"
    >
    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/img_smdv"
        android:layout_width="200dp"
        android:layout_height="150dp"
        />
    <TextView
        android:id="@+id/tv_flnm_smdv"
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/img_smdv"
        android:text="Full name"
        />
    <TextView
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:id="@+id/tv_ad_smdv"
        android:layout_toRightOf="@+id/img_smdv"
        android:layout_below="@+id/tv_flnm_smdv"
        android:text="Address"
        />
    <TextView
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:id="@+id/tv_ph_smdv"
        android:layout_toRightOf="@+id/img_smdv"
        android:text="Phone Number"
        android:layout_below="@+id/tv_ad_smdv"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/btn_hire_smdv"
        android:text="Hire"
        android:layout_toRightOf="@+id/img_smdv"
        android:layout_below="@+id/tv_ph_smdv"/>


</RelativeLayout>