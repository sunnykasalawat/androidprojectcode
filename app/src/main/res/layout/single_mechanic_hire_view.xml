<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="200dp"
    >
    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/img_smhv"
        android:layout_width="200dp"
        android:layout_height="150dp"
        />
    <TextView
        android:id="@+id/tv_flnm_smhv"
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/img_smhv"
        android:text="Full name"
        />
    <TextView
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:id="@+id/tv_ad_smhv"
        android:layout_toRightOf="@+id/img_smhv"
        android:layout_below="@+id/tv_flnm_smhv"
        android:text="Address"
        />
    <TextView
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:id="@+id/tv_ph_smhv"
        android:layout_toRightOf="@+id/img_smhv"
        android:text="Phone Number"
        android:layout_below="@+id/tv_ad_smhv"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/btn_Accept_smhv"
        android:text="Accept"
        android:layout_toRightOf="@+id/img_smhv"
        android:layout_below="@+id/tv_ph_smhv"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/btn_Cancel_smhv"
        android:text="Cancle"
        android:layout_toRightOf="@+id/img_smhv"
        android:layout_below="@+id/btn_Accept_smhv"/>


</RelativeLayout>